<!DOCTYPE html>
<html>
<head>
  <title><%= full_title(yield(:title)) %></title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <link href='http://fonts.googleapis.com/css?family=Slabo+27px' rel='stylesheet' type='text/css'>
  <script src="http://widget.cloudinary.com/global/all.js" type="text/javascript"></script>
  <script type="text/javascript" charset="utf-8">
    window.CLOUDINARY_SETTINGS = {
      cloud_name: '<%= ENV['cloud_name'] %>',
      upload_preset: '<%= ENV['upload_preset'] %>',
      sources: ['local','url'],
      theme: 'minimal'
    }
  </script>
  <%= csrf_meta_tags %>
  <%= render 'layouts/shim' %>
  <%= render 'layouts/favicon' %>
</head>
<body>

  <%= render 'layouts/header' %>
  <div class="container content">
    <%= yield %>
    <% flash.each do |message_type, messages| %>
    <ul class="alert">
      <% messages.each do |msg| %>
        <li>
          <%= content_tag(:div, msg, class: "alert-#{message_type} col-xs-4 col-xs-offset-4") %>
        </li>
      <% end %>
    </ul>
    <% end %>

    <%= render 'trip_plans/new_modal' %>
  </div>
</body>
</html>
<script>

$(document).ready(function () {
  tripler.addEventListeners();
});
</script>
