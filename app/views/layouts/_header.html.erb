<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <a href="/">
      <%= image_tag('tplr-logowide.png', id: 'logo', alt: 'Logo') %>
    </a>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <% if current_user %>
          <li><%= link_to "Your Trips", current_user %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Explore <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "All Trips", trip_plans_url %></li>
              <li><%= link_to "All Users", users_url %></li>
            </ul>
          </li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= current_user.login %> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">

              <li><a class="new-trip" href="javascript:void(0)">New Trip Plan</a></li>
              <li class="divider"></li>
              <li>
                <%= link_to "Log out", user_session_url(current_user), method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "Log in", new_user_session_url %></li>
          <li><%= link_to "Sign Up", new_user_url %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
